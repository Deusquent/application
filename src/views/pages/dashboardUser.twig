{% extends '../layouts/base.twig' %}

{% block content %}
	<div class="dashboard-layout">
		<aside class="sidebar">
			<div class="sidebar-logo-block">
				<div class="sidebar-logo">
					<img src="/assets/img/logo.svg" alt="Logo" style="width:24px;height:24px;">
				</div>
				<span class="sidebar-title">CarMaintenance Pro</span>
			</div>
			<nav class="sidebar-nav">
				<a href="/dashboard" class="active">Tableau de bord</a>
				<a href="/mes-vehicules">Mes véhicules</a>
				<a href="/rdv">Rendez-vous</a>
				<a href="/documents">Documents</a>
				<a href="/parametres">Paramètres</a>
			</nav>
			<div class="sidebar-stats">
				<div>Véhicules
					<span class="stat-red"></span>
				</div>
				<div>RDV ce mois
					<span class="stat-yellow"></span>
				</div>
				<div>Alertes
					<span class="stat-red"></span>
				</div>
			</div>
		</aside>
		<div class="dashboard-main">
			<header class="dashboard-header">
				<h1>Tableau de bord</h1>
				<p>Vue d'ensemble de vos véhicules et entretiens</p>
				<div class="dashboard-actions">
					<a href="/addVoiture" class="btn btn-green">+ Ajouter véhicule</a>
					<a href="/nouveau-rdv" class="btn btn-red">Nouveau RDV</a>
				</div>
			</header>
			<div class="dashboard-content-grid">
				<section class="dashboard-block vehicles-block">
					<h2>Mes véhicules</h2>
					<div class="vehicles-list"></div>
				</section>
				<section class="dashboard-block rdv-block">
					<h2>Rendez-vous à venir</h2>
					<div class="rdv-list"></div>
				</section>
				<section class="dashboard-block reco-block">
					<h2>Recommandations d'entretien</h2>
					<div class="reco-list">
						<div class="reco-card"></div>
						<div class="reco-card empty"></div>
					</div>
				</section>
			</div>
		</div>
	</div>
{% endblock %}
