{% extends '../layouts/base.twig' %}
{% set noLayout = true %}
{% block title %}Connexion | CarMaintenance Pro
{% endblock %}

{% block content %}
	<div class="logo-container">
		<img src="/assets/img/logo.svg" alt="Logo">
	</div>

	<h1>Connexion</h1>
	<p class="subtitle">Accédez à votre espace personnel</p>

	{% if error %}
		<div class="error" style="color: red; margin-bottom: 1em;">{{ error }}</div>
	{% endif %}

<form action="/login" method="POST">
    <div class="row">
        <label>
            <span>Email</span>
            <div class="input-group">
                <input type="email" id="email" name="email" placeholder="Email" required>
            </div>
        </label>
    </div>
    <div class="row">
        <label>
            <span>Mot de passe</span>
            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="Mot de passe" required>
            </div>
        </label>
    </div>
    <div class="row">
        <label>
            <span>Type de compte</span>
            <div class="input-group">
                <select name="role" required>
                    <option value="user">Utilisateur</option>
                    <option value="mecano">Mécano</option>
                </select>
            </div>
        </label>
    </div>
    <button type="submit" class="submit-btn">Se connecter</button>
</form>
<div class="register-link-block" style="margin-top: 1.5rem; text-align: center;">
    <button class="register-btn" onclick="window.location.href='/register'">Retour à l'accueil</button>
</div>

{% endblock %}
